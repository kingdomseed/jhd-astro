{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "resources",
      "previewPath": "/resources/{{slug}}",
      "pageBundle": false,
      "clearEmpty": true,
      "fields": [
        {
          "name": "title",
          "type": "string",
          "single": true,
          "required": true
        },
        {
          "name": "summary",
          "type": "string",
          "single": true,
          "required": true
        },
        {
          "name": "category",
          "type": "choice",
          "choices": [
            "start-here",
            "adventure-journals",
            "dice-roller",
            "custom-tables",
            "advanced"
          ],
          "required": true
        },
        {
          "name": "order",
          "type": "number",
          "single": true,
          "required": true
        },
        {
          "name": "icon",
          "type": "string",
          "single": true,
          "default": "fa-slab fa-regular fa-book-open"
        },
        {
          "name": "duration",
          "type": "string",
          "single": true
        },
        {
          "name": "externalUrl",
          "type": "string",
          "single": true
        },
        {
          "name": "updated",
          "type": "date",
          "single": true
        },
        {
          "name": "hero",
          "type": "string",
          "single": true
        },
        {
          "name": "heroAlt",
          "type": "string",
          "single": true
        },
        {
          "name": "steps",
          "type": "list",
          "description": "Structured steps (title, body, optional image & alt)",
          "fields": [
            {
              "name": "title",
              "type": "string",
              "single": true,
              "required": true
            },
            {
              "name": "body",
              "type": "string",
              "single": true
            },
            {
              "name": "image",
              "type": "string",
              "single": true
            },
            {
              "name": "imageAlt",
              "type": "string",
              "single": true
            }
          ]
        },
        {
          "title": "tags",
          "name": "tags",
          "type": "tags"
        },
        {
          "title": "keywords",
          "name": "keywords",
          "type": "choice",
          "choices": [
            "Dice roller",
            "Getting started",
            "Roll dice"
          ]
        },
        {
          "title": "related",
          "name": "related",
          "type": "choice",
          "choices": [
            "dice-formulas-and-customization",
            "saving-and-managing-dice-formulas"
          ]
        },
        {
          "title": "downloads",
          "name": "downloads",
          "type": "block",
          "fieldGroup": [
            "downloads_group"
          ]
        }
      ]
    },
    {
      "name": "blog",
      "previewPath": "/blog/{{slug}}",
      "pageBundle": false,
      "clearEmpty": true,
      "fields": [
        {
          "name": "title",
          "type": "string",
          "single": true,
          "required": true
        },
        {
          "name": "summary",
          "type": "string",
          "single": true,
          "required": true
        },
        {
          "name": "category",
          "type": "choice",
          "choices": [
            "Release Notes",
            "Behind the Scenes",
            "Guides",
            "Community",
            "Announcement"
          ],
          "required": true
        },
        {
          "name": "date",
          "type": "date",
          "single": true,
          "required": true
        },
        {
          "name": "readTime",
          "type": "string",
          "single": true,
          "required": true
        },
        {
          "name": "isSample",
          "type": "boolean",
          "default": true
        },
        {
          "name": "tags",
          "type": "tags",
          "default": []
        },
        {
          "name": "hero",
          "type": "string",
          "single": true
        },
        {
          "name": "heroAlt",
          "type": "string",
          "single": true
        },
        {
          "name": "socialImage",
          "type": "string",
          "single": true
        },
        {
          "name": "socialImageAlt",
          "type": "string",
          "single": true
        }
      ]
    },
    {
      "name": "pages",
      "previewPath": "/{{slug}}",
      "pageBundle": false,
      "clearEmpty": true,
      "fields": [
        {
          "name": "title",
          "type": "string",
          "single": true,
          "required": true
        },
        {
          "name": "subtitle",
          "type": "string",
          "single": true,
          "required": true
        },
        {
          "name": "description",
          "type": "string",
          "single": true,
          "required": true
        },
        {
          "name": "pageHeader",
          "type": "fields",
          "fields": [
            {
              "name": "accent",
              "type": "string",
              "single": true,
              "required": true
            },
            {
              "name": "icon",
              "type": "string",
              "single": true,
              "required": true
            },
            {
              "name": "layout",
              "type": "string",
              "single": true,
              "required": true
            },
            {
              "name": "visualElement",
              "type": "string",
              "single": true,
              "required": true
            },
            {
              "name": "colorScheme",
              "type": "string",
              "single": true,
              "required": true
            }
          ]
        },
        {
          "name": "backgroundHighlights",
          "type": "list",
          "description": "Background highlight cards",
          "fields": [
            {
              "name": "icon",
              "type": "string",
              "single": true,
              "required": true
            },
            {
              "name": "title",
              "type": "string",
              "single": true,
              "required": true
            },
            {
              "name": "description",
              "type": "string",
              "single": true,
              "required": true
            }
          ]
        },
        {
          "name": "socialLinks",
          "type": "list",
          "description": "Social media and external links",
          "fields": [
            {
              "name": "href",
              "type": "string",
              "single": true,
              "required": true
            },
            {
              "name": "label",
              "type": "string",
              "single": true,
              "required": true
            },
            {
              "name": "icon",
              "type": "string",
              "single": true,
              "required": true
            },
            {
              "name": "className",
              "type": "string",
              "single": true,
              "required": true
            },
            {
              "name": "external",
              "type": "boolean"
            }
          ]
        },
        {
          "name": "mythicHighlights",
          "type": "list",
          "description": "List of product highlights",
          "fields": [
            {
              "name": "text",
              "type": "string",
              "single": true,
              "required": true
            }
          ]
        }
      ]
    }
  ],
  "frontMatter.framework.id": "astro",
  "frontMatter.preview.host": "http://localhost:4321",
  "frontMatter.content.pageFolders": [
    {
      "title": "resources",
      "path": "[[workspace]]/src/content/resources",
      "contentTypes": [
        "resources"
      ]
    },
    {
      "title": "blog",
      "path": "[[workspace]]/src/content/blog",
      "contentTypes": [
        "blog"
      ]
    },
    {
      "title": "pages",
      "path": "[[workspace]]/src/content/pages",
      "contentTypes": [
        "pages"
      ]
    },
    {
      "title": "Multilingual",
      "path": "[[workspace]]/src/content/resources",
      "filePrefix": "{{date|yyyy-MM-dd}}",
      "defaultLocale": "en"
    },
    {
      "title": "Multilingual",
      "path": "[[workspace]]/src/content/blog",
      "filePrefix": "{{date|yyyy-MM-dd}}",
      "defaultLocale": "en"
    }
  ],
  "frontMatter.content.i18n": [
    {
      "title": "English",
      "locale": "en",
      "path": "en"
    },
    {
      "title": "German",
      "locale": "de",
      "path": "de"
    },
    {
      "title": "Portuguese",
      "locale": "pt",
      "path": "pt"
    },
    {
      "title": "Italian",
      "locale": "it",
      "path": "it"
    },
    {
      "title": "French",
      "locale": "fr",
      "path": "fr"
    },
    {
      "title": "Spanish",
      "locale": "es",
      "path": "es"
    }
  ],
  "frontMatter.content.publicFolder": {
    "path": "src/assets",
    "relative": true
  },
  "frontMatter.git.enabled": true,
  "frontMatter.panel.openOnSupportedFile": true,
  "frontMatter.taxonomy.fieldGroups": [
    {
      "id": "downloads_group",
      "fields": [
        {
          "title": "label",
          "name": "label",
          "type": "string"
        },
        {
          "title": "href",
          "name": "href",
          "type": "string"
        },
        {
          "title": "format",
          "name": "format",
          "type": "string"
        }
      ]
    }
  ]
}