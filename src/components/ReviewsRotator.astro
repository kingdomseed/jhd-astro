---
// Reviews rotator: small self-contained strip that cycles player quotes.
---
<section class="strip" aria-label="What players say">
  <div class="container">
    <figure class="reviews-rotator" aria-roledescription="carousel" aria-label="Player reviews">
      <div class="rev-stage">
        <p id="quote" aria-live="polite">Loading…</p>
      </div>
      <p id="rev-status" class="sr-only" aria-live="polite">Quote 1 of 1</p>
      <div class="rev-controls" aria-label="Review controls">
        <button type="button" class="rev-prev" aria-label="Previous quote">‹</button>
        <button type="button" class="rev-pause" aria-pressed="false" aria-label="Pause autoplay">⏸</button>
        <button type="button" class="rev-next" aria-label="Next quote">›</button>
      </div>
    </figure>

    <script>
      import '../scripts/reviews-rotator.ts';
      // Hoisted import: processed by Astro/Vite (TS supported)
    </script>
  </div>
</section>
