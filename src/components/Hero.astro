---
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import { getRelativeLocaleUrl } from "astro:i18n";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const l = (path: string) => getRelativeLocaleUrl(lang, path);
---

<section class="hero hero-fullwidth" aria-labelledby="hero-title">
  <!-- Layer reserved for future decoration; hidden by default -->
  <div class="grid-layer" aria-hidden="true"></div>
  <div class="hero-content">
    <header class="hero-head">
      <div class="hero-eyebrow" aria-hidden="true">
        <span class="accent-line" aria-hidden="true"></span>
        <span class="badge-text">{t("hero.eyebrow")}</span>
      </div>
      <h1 id="hero-title" class="display-title">{t("hero.headline")}</h1>
      <p class="lead-accent">{t("hero.lead")}</p>
      <div class="cta-row">
        <a class="btn btn--shadow-primary" href={l("apps")}>
          <i class="fa-slab fa-regular fa-circle-info" aria-hidden="true"></i>
          {t("hero.learn_more")}
        </a>
        <a class="btn btn--shadow-accent" href={l("resources")}>
          <i class="fa-slab fa-regular fa-book-open" aria-hidden="true"></i>
          {t("hero.get_resources")}
        </a>
      </div>
      <ul class="stats" role="list">
        <li class="stat-chip">
          <span class="stat-value">4.7</span>
          <i class="fa-slab fa-regular fa-star" aria-hidden="true"></i>
          <span>{t("hero.stats.rating")}</span>
        </li>
        <li class="stat-chip">
          <i class="fa-slab fa-regular fa-arrow-down-to-line" aria-hidden="true"
          ></i>
          <span>{t("hero.stats.installs")}</span>
        </li>
        <li class="stat-chip">
          <i class="fa-slab fa-regular fa-users" aria-hidden="true"></i>
          <span>{t("hero.stats.community")}</span>
        </li>
      </ul>
    </header>
  </div>
</section>
