---
// Partners strip styled like the reviews section (banded strip with borders).
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="strip" id="partners" aria-labelledby="partners-title">
  <div class="container">
    <header class="strip-head" aria-hidden="true">
      <span class="accent-line" aria-hidden="true"></span>
      <span class="badge-text">{t("partners.badge")}</span>
    </header>
    <h2 id="partners-title" class="section-title" style="margin-bottom: 6px">
      {t("partners.title")}
    </h2>
    <ul class="partners-list" aria-label={t("partners.label")}>
      <li>
        <a
          class="btn btn--shadow-wordmill partner-btn"
          href="https://www.wordmillgames.com/"
          target="_blank"
          rel="noopener"
        >
          <i class="fa-slab fa-regular fa-book" aria-hidden="true"></i>
          <span>Word Mill Creative</span>
        </a>
      </li>
      <li>
        <a
          class="btn btn--shadow-retropunk partner-btn"
          href="https://retropunk.com.br/"
          target="_blank"
          rel="noopener"
        >
          <i class="fa-slab fa-regular fa-globe" aria-hidden="true"></i>
          <span>Retropunk</span>
        </a>
      </li>
    </ul>
  </div>
</section>
