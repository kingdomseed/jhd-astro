---
// Footer component providing site navigation links, social
// connections and legal text.  The current year is computed
// dynamically so that the copyright notice always remains up to
// date.
const year = new Date().getFullYear();
---
<footer class="site-footer" role="contentinfo">
  <div class="container footer-grid">
    <div class="f-brand">
      <div class="logo" aria-hidden="true">JH</div>
      <div>
        <strong>Jason Holt Digital</strong>
        <small>Official Mythic GME&nbsp;2e apps</small>
      </div>
    </div>
    <nav class="f-links" aria-label="Footer">
      <a href="#apps">Apps</a>
      <a href="#resources">Resources</a>
      <a href="#support">Support</a>
      <a href="#blog">Blog</a>
      <a href="#about">About</a>
    </nav>
    <div class="f-social" aria-label="Social links">
      <a class="ico" href="https://discord.gg/PEDHrhzcnk" target="_blank" rel="noopener" aria-label="Discord">
        <i class="fa-brands fa-discord" aria-hidden="true"></i>
      </a>
      <a class="ico" href="https://www.youtube.com/@jasonholt2488" target="_blank" rel="noopener" aria-label="YouTube">
        <i class="fa-brands fa-youtube" aria-hidden="true"></i>
      </a>
      <a class="ico" href="https://github.com/kingdomseed" target="_blank" rel="noopener" aria-label="GitHub">
        <i class="fa-brands fa-github" aria-hidden="true"></i>
      </a>
      <a class="ico" href="https://itch.io/profile/jasonholtdigital" target="_blank" rel="noopener" aria-label="itch.io">
        <i class="fa-brands fa-itch-io" aria-hidden="true"></i>
      </a>
    </div>
  </div>
  <div class="container f-legal">
    <small>
      © {year} Jason Holt Digital ·
      <a href="#">Privacy</a> ·
      <a href="#">Terms</a> ·
      <a href="#">Contact</a>
    </small>
  </div>
</footer>