---
// Reusable page header component with neo-brutalist styling
// Provides consistent, impactful page intros across the site
interface Props {
  title: string;
  subtitle?: string;
  description?: string;
  accent?: string;
  className?: string;
}

const { title, subtitle, description, accent = "Apps", className = "" } = Astro.props;
---

<section class={`page-header ${className}`}>
  <div class="container">
    <div class="page-header-content">
      <div class="page-header-badge">
        <span class="accent-line" aria-hidden="true"></span>
        <span class="badge-text">{accent}</span>
      </div>
      
      <h1 class="page-title">{title}</h1>
      
      {subtitle && (
        <p class="page-subtitle">{subtitle}</p>
      )}
      
      {description && (
        <p class="page-description">{description}</p>
      )}
    </div>
  </div>
</section>

<style>
  .page-header {
    position: relative;
    padding: 4rem 0 3rem;
    background: linear-gradient(135deg, var(--color-bg) 0%, var(--color-surface-2) 100%);
    border-bottom: var(--border-thick);
    overflow: hidden;
  }
  
  .page-header::before {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    width: 40%;
    height: 100%;
    background: var(--color-accent);
    opacity: 0.05;
    transform: skewX(-12deg) translateX(20%);
    z-index: 1;
  }
  
  .page-header-content {
    position: relative;
    z-index: 2;
    max-width: 800px;
  }
  
  .page-header-badge {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 1.5rem;
  }
  
  .accent-line {
    width: 40px;
    height: 3px;
    background: var(--color-primary);
    border: 1px solid var(--color-border);
  }
  
  .badge-text {
    font-size: 0.875rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-primary);
  }
  
  .page-title {
    font-size: clamp(2.5rem, 8vw, 4rem);
    font-weight: 900;
    line-height: 1.1;
    color: var(--color-text);
    margin: 0 0 1rem;
    letter-spacing: -0.02em;
  }
  
  .page-subtitle {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-primary);
    margin: 0 0 1rem;
    line-height: 1.4;
  }
  
  .page-description {
    font-size: 1.125rem;
    color: var(--color-text-muted);
    line-height: 1.6;
    margin: 0;
    max-width: 600px;
  }
  
  /* Geometric accent shapes */
  .page-header::after {
    content: '';
    position: absolute;
    bottom: 2rem;
    right: 2rem;
    width: 60px;
    height: 60px;
    background: var(--color-accent);
    border: var(--border-base);
    transform: rotate(45deg);
    opacity: 0.8;
    z-index: 1;
  }
  
  /* Responsive adjustments */
  @media (max-width: 768px) {
    .page-header {
      padding: 3rem 0 2rem;
    }
    
    .page-header::after {
      width: 40px;
      height: 40px;
      bottom: 1rem;
      right: 1rem;
    }
  }
</style>