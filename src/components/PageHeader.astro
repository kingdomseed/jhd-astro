---
// Reusable page header component with neo-brutalist styling
// Provides consistent, impactful page intros across the site
interface Props {
  title: string;
  subtitle?: string;
  description?: string;
  accent?: string;
  className?: string;
  layout?: "left" | "right" | "center";
  icon?: string;
  visualElement?: "shapes" | "grid" | "particles";
  colorScheme?: "primary" | "secondary" | "accent";
}

const { 
  title, 
  subtitle, 
  description, 
  accent = "Apps", 
  className = "",
  layout = "left",
  icon,
  visualElement = "shapes",
  colorScheme = "primary"
} = Astro.props;
---

<section class={`page-header page-header--${layout} page-header--${visualElement} page-header--${colorScheme} ${className}`}>
  <div class="container">
    <div class="page-header-content">
      <div class="page-header-badge">
        <span class="accent-line" aria-hidden="true"></span>
        {icon && <i class={`page-header-icon ${icon}`} aria-hidden="true"></i>}
        <span class="badge-text">{accent}</span>
      </div>
      
      <h1 class="page-title">{title}</h1>
      
      {subtitle && (
        <p class="page-subtitle">{subtitle}</p>
      )}
      
      {description && (
        <p class="page-description">{description}</p>
      )}
    </div>
  </div>
</section>

