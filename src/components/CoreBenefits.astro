---
// Core benefits section enumerates the primary reasons players
// appreciate the Mythic GME applications.  Each benefit appears
// as a card with a headline and succinct description.
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="container section" id="apps" aria-labelledby="benefits-title">
  <header class="benefits-head" aria-hidden="false">
    <span class="accent-line" aria-hidden="true"></span>
    <span class="badge-text">{t("benefit.badge")}</span>
  </header>
  <h2 id="benefits-title" class="section-title">{t("benefit.title")}</h2>
  <div class="cards benefits-grid">
    <article class="card">
      <div class="card-icon" aria-hidden="true">
        <i class="fa-slab fa-regular fa-bolt"></i>
      </div>
      <h3>{t("benefit.card1.title")}</h3>
      <p>{t("benefit.card1.desc")}</p>
    </article>
    <article class="card">
      <div class="card-icon" aria-hidden="true">
        <i class="fa-slab fa-regular fa-shield"></i>
      </div>
      <h3>{t("benefit.card2.title")}</h3>
      <p>{t("benefit.card2.desc")}</p>
    </article>
    <article class="card">
      <div class="card-icon" aria-hidden="true">
        <i class="fa-slab fa-regular fa-book-open"></i>
      </div>
      <h3>{t("benefit.card3.title")}</h3>
      <p>{t("benefit.card3.desc")}</p>
    </article>
    <article class="card">
      <div class="card-icon" aria-hidden="true">
        <i class="fa-slab fa-regular fa-sliders"></i>
      </div>
      <h3>{t("benefit.card4.title")}</h3>
      <p>{t("benefit.card4.desc")}</p>
    </article>
  </div>
</section>
