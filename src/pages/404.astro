---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>404 — Page Not Found | Mythic GME Apps</title>
    <meta name="description" content="Sorry, we can't find that page. Try the homepage, Apps, Support, or Contact." />
    <link rel="stylesheet" href="/global.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.0/css/all.min.css" />
  </head>
  <body>
    <a class="skip" href="#main">Skip to main content</a>
    <div id="bg-atmo" aria-hidden="true"></div>
    <div id="site">
      <Header />
      <main id="main" class="container" style="min-height:60vh; padding: 3rem 0;">
        <section class="panel" aria-labelledby="nf-title" style="text-align:center">
          <h1 id="nf-title">404 — Page Not Found</h1>
          <p class="muted" style="color: var(--muted)">The page you’re looking for doesn’t exist or may have moved.</p>
        </section>

        <section class="panel" aria-labelledby="nf-links" style="margin-top:1rem">
          <h2 id="nf-links">Try one of these</h2>
          <nav aria-label="Helpful links" class="row" style="gap:.5rem; margin-top:.5rem">
            <a class="cta-brick" href="/">Home</a>
            <a class="cta-brick" href="/apps">Apps</a>
            <a class="cta-brick" href="/support">Support</a>
            <a class="cta-brick" href="/resources">Resources</a>
            <a class="cta-brick" href="/blog">Blog</a>
            <a class="cta-brick" href="/contact">Contact</a>
          </nav>
        </section>
      </main>
      <Footer />
    </div>
  </body>
</html>
