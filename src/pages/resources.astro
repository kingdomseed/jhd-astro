---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import PageHeader from '../components/PageHeader.astro';
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Resources — Guides & Docs for Mythic GME 2e Apps</title>
    <meta name="description" content="Short, task‑focused guides: getting started, table import/export, dice formulas, troubleshooting." />
    <link rel="stylesheet" href="/global.css" />
    <script src="https://kit.fontawesome.com/9f0db3cdf4.js" crossorigin="anonymous"></script>
    <link rel="canonical" href="https://jasonholtdigital.com/resources/" />
  </head>
  <body>
    <a class="skip" href="#main">Skip to main content</a>
    <div id="bg-atmo" aria-hidden="true"></div>
    <div id="site">
      <Header />
      
      <PageHeader 
        title="Guides & Documentation"
        subtitle="Learn, create, and troubleshoot"
        description="Task-focused guides: getting started, table import/export, dice formulas, and troubleshooting."
        accent="Resources"
        layout="right"
        icon="fa-solid fa-book-open"
        visualElement="shapes"
        colorScheme="primary"
      />
      
      <main id="main" class="container" style="min-height:40vh; padding: 3rem 0;">
        <section aria-labelledby="guides-title" style="margin-top:1rem">
          <h2 id="guides-title">Guides</h2>
          <ul class="links" style="margin-top:10px">
            <li>
              <a href="/resources#getting-started">
                Getting Started with Mythic
                <span>→</span>
              </a>
            </li>
            <li>
              <a href="https://www.jasonholtdigital.com/import-tables-guide.html" target="_blank" rel="noopener">
                Importing &amp; Exporting Tables
                <span>→</span>
              </a>
            </li>
            <li>
              <a href="https://www.jasonholtdigital.com/formula-guide.html" target="_blank" rel="noopener">
                Dice Roller Formula Guide
                <span>→</span>
              </a>
            </li>
            <li>
              <a href="https://www.jasonholtdigital.com/categories-user-guide.html" target="_blank" rel="noopener">
                Custom Tables 101
                <span>→</span>
              </a>
            </li>
            <li>
              <a href="/support">
                Troubleshooting
                <span>→</span>
              </a>
            </li>
          </ul>
        </section>

        <section aria-labelledby="dev-title" style="margin-top:1rem">
          <h2 id="dev-title">Developer Resources</h2>
          <ul class="links" style="margin-top:10px">
            <li>
              <a href="https://www.jasonholtdigital.com/table-schemas-unified.html" target="_blank" rel="noopener">
                Table Schema Documentation
                <span>→</span>
              </a>
            </li>
            <li>
              <a href="https://www.jasonholtdigital.com/resources/unified-table-v3-schema.jsonc" target="_blank" rel="noopener">
                Unified Table Schema (JSON)
                <span>→</span>
              </a>
            </li>
            <li>
              <a href="https://www.jasonholtdigital.com/resources/categories_schema.jsonc" target="_blank" rel="noopener">
                Categories Schema (JSON)
                <span>→</span>
              </a>
            </li>
          </ul>
        </section>

        <section aria-labelledby="index-title" style="margin-top:1rem">
          <h2 id="index-title">Index &amp; Search</h2>
          <p>Compact index of articles. Search coming soon.</p>
        </section>
      </main>
      <Footer />
    </div>
  </body>
</html>
