---
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import PageHeader from "../../components/PageHeader.astro";
import AppSection from "../../components/AppSection.astro";
import m1 from "../../assets/mobile/mobile-1.png";
import m2 from "../../assets/mobile/mobile-2.png";
import m3 from "../../assets/mobile/mobile-3.png";
import m4 from "../../assets/mobile/mobile-4.png";
import m5 from "../../assets/mobile/mobile-5.png";
import m6 from "../../assets/mobile/mobile-6.png";
import m7 from "../../assets/mobile/mobile-7.png";
import m8 from "../../assets/mobile/mobile-8.png";
import m9 from "../../assets/mobile/mobile-9.png";
import m10 from "../../assets/mobile/mobile-10.png";
import d1 from "../../assets/desktop/desktop-1.png";
import d2 from "../../assets/desktop/desktop-2.png";
import d3 from "../../assets/desktop/desktop-3.png";
import d4 from "../../assets/desktop/desktop-4.png";
import d5 from "../../assets/desktop/desktop-5.png";
import d6 from "../../assets/desktop/desktop-6.png";
import HeadFonts from "../../components/HeadFonts.astro";
import defaultOg from "../../assets/logo/logo.jpg?url";

const ogImageUrl = new URL(
    defaultOg,
    Astro.site ?? "https://jasonholtdigital.com",
).toString();

// App data
const mobileApp = {
    title: "Mythic GME Mobile",
    whoItsFor:
        "Jogadores solo que querem menos consulta e mais história, em qualquer lugar.",
    features: [
        "Sistemas de Tabela de Destino e Teste de Destino",
        "Personagens, Tramas, Características e Cenas",
        "Diário de aventura para acompanhar sua história",
        "Tabelas personalizadas, rolador de dados e mais",
    ],
    officialContent: [
        "50 tabelas principais do Mythic GME 2e (48 de significado + 2 de foco de evento)",
        "Expanda para 160+ tabelas com Recursos Expandidos (Variations, Magazines 1-61)",
        "Tabelas de Foco de Evento de Aventura Aleatória e Preparada",
        "Novo conteúdo oficial adicionado com grandes lançamentos",
    ],
    iapInfo:
        "Os desbloqueios IAP são permanentes (não é assinatura). Recursos que você desbloqueia, mais quaisquer novos recursos pro adicionados dentro de 12 meses, permanecem desbloqueados para sempre. Similar ao modelo do Working Copy.",
    storeLinks: [
        {
            name: "Apple App Store",
            url: "https://apps.apple.com/us/app/mythic-gme-mobile/id6726999147",
            icon: "fa-brands fa-apple",
        },
        {
            name: "Google Play",
            url: "https://play.google.com/store/apps/details?id=com.jasonholtdigital.mythicgme2e",
            icon: "fa-brands fa-google-play",
        },
        {
            name: "Amazon Appstore",
            url: "https://www.amazon.ca/Jason-Holt-Digital-LLC-Mythic/dp/B0DJBPF9L9",
            icon: "fa-brands fa-amazon",
        },
    ],
};

const desktopApp = {
    title: "Mythic GME Digital",
    whoItsFor:
        "Jogadores de PC/Mac/Linux que querem um layout focado para sessões longas.",
    features: [
        "Todos os recursos e sistemas mobile",
        "Layout completo de desktop para sessões longas",
        "Tudo incluído (sem desbloqueios no app)",
        "Tabelas personalizadas, rolador de dados e mais",
    ],
    officialContent: [
        "Todo o conteúdo oficial abrangendo o universo Mythic",
        "Sem compras no app ou assinaturas",
        "Todas as tabelas e recursos desbloqueados na compra",
    ],
    disclaimer:
        "A versão da Mac App Store é um pacote mobile + desktop e inclui desbloqueios no app para conteúdo e recursos adicionais.",
    storeLinks: [
        {
            name: "itch.io (Sem DRM)",
            url: "https://jasonholtdigital.itch.io/mythic-gme-digital",
            icon: "fa-brands fa-itch-io",
        },
        {
            name: "Microsoft Store",
            url: "https://apps.microsoft.com/detail/9n39b8hj3cdg",
            icon: "fa-brands fa-windows",
        },
        {
            name: "Steam",
            url: "#",
            icon: "fa-brands fa-steam",
            available: false,
        },
    ],
};
---

<html lang="pt-BR">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <HeadFonts />
        <title>Apps — Companheiros Mythic GME 2e | Jason Holt Digital</title>
        <meta
            name="description"
            content="Compare os apps Mobile e Desktop, veja o conteúdo oficial e baixe na sua plataforma. Apps companheiros oficiais licenciados do Mythic GME 2e."
        />

        <!-- OpenGraph -->
        <meta
            property="og:title"
            content="Apps Mythic GME 2e — Mobile e Desktop | Jason Holt Digital"
        />
        <meta
            property="og:description"
            content="Apps companheiros oficiais licenciados para Mythic GME 2e. Disponível para mobile (iOS, Android) e desktop (Windows, macOS, Linux)."
        />
        <meta property="og:type" content="website" />
        <meta
            property="og:url"
            content="https://jasonholtdigital.com/pt/apps/"
        />
        <meta property="og:image" content={ogImageUrl} />

        <!-- Twitter Card -->
        <meta name="twitter:card" content="summary_large_image" />
        <meta
            name="twitter:title"
            content="Apps Mythic GME 2e — Mobile e Desktop"
        />
        <meta
            name="twitter:description"
            content="Apps companheiros oficiais licenciados para Mythic GME 2e. Disponível para plataformas mobile e desktop."
        />
        <meta name="twitter:image" content={ogImageUrl} />

        <link rel="stylesheet" href="/global.css" />
        <script
            is:inline
            src="https://kit.fontawesome.com/9f0db3cdf4.js"
            crossorigin="anonymous"></script>
        <link rel="canonical" href="https://jasonholtdigital.com/pt/apps/" />
    </head>
    <body>
        <a class="skip" href="#main">Pular para o conteúdo principal</a>
        <!-- Atmospheric background gradients -->
        <div id="bg-atmo" aria-hidden="true"></div>
        <div id="site">
            <Header />

            <PageHeader
                title="Apps Mythic GME"
                subtitle="Mobile e Desktop, com você onde quer que jogue."
                description="Aplicativos companheiros oficiais licenciados para Mythic GME 2ª Edição."
                accent="Apps"
                visualElement="grid"
            />

            <main id="main">
                <!-- Mobile App Section (Left-aligned content) -->
                <AppSection
                    title={mobileApp.title}
                    whoItsFor={mobileApp.whoItsFor}
                    features={mobileApp.features}
                    officialContent={mobileApp.officialContent}
                    iapInfo={mobileApp.iapInfo}
                    storeLinks={mobileApp.storeLinks}
                    images={[m1, m2, m3, m4, m5, m6, m7, m8, m9, m10]}
                    imageAlt="Screenshots do Mythic GME Mobile"
                    reverse={false}
                />

                <!-- Adventure Crafter Divider Section -->
                <section
                    class="adventure-crafter-divider"
                    style="border-top: 4px solid var(--color-border); border-bottom: 4px solid var(--color-border); padding: 3rem 0;"
                >
                    <div class="container">
                        <header
                            class="section-head"
                            style="justify-content: center; margin-bottom: 1.5rem;"
                            aria-hidden="true"
                        >
                            <span class="accent-line" aria-hidden="true"></span>
                            <span class="badge-text">Em Breve</span>
                        </header>
                        <h2
                            class="section-title"
                            style="text-align: center; margin-bottom: 1rem;"
                        >
                            Adventure Crafter
                        </h2>
                        <p
                            class="lead-accent"
                            style="text-align: center; margin-bottom: 0;"
                        >
                            Jogadores solo que querem criação guiada de
                            aventuras com ganchos e reviravoltas — Fique ligado
                            nas novidades!
                        </p>
                    </div>
                </section>

                <!-- Desktop App Section (Left-aligned content) -->
                <AppSection
                    title={desktopApp.title}
                    whoItsFor={desktopApp.whoItsFor}
                    features={desktopApp.features}
                    officialContent={desktopApp.officialContent}
                    disclaimer={desktopApp.disclaimer}
                    storeLinks={desktopApp.storeLinks}
                    images={[d1, d2, d3, d4, d5, d6]}
                    imageAlt="Screenshots do Mythic GME Desktop"
                    reverse={true}
                />

                <!-- Buy the Books Section -->
                <section class="books-section">
                    <div class="container">
                        <header
                            class="section-head"
                            style="justify-content: center; margin-bottom: 2rem;"
                            aria-hidden="true"
                        >
                            <span class="accent-line" aria-hidden="true"></span>
                            <span class="badge-text">Livros Físicos</span>
                        </header>
                        <h2
                            class="section-title"
                            style="text-align: center; margin-bottom: 1rem;"
                        >
                            Adquira os Livros Originais
                        </h2>
                        <p
                            class="lead-accent"
                            style="text-align: center; margin-bottom: 2rem;"
                        >
                            Experimente o sistema Mythic completo com os livros
                            físicos oficiais de Tana Pigeon.
                        </p>
                        <div class="books-grid">
                            <div class="book-card">
                                <h3>Mythic GME 2e</h3>
                                <p>
                                    O sistema de RPG solo completo que começou
                                    tudo.
                                </p>
                                <a
                                    href="https://www.drivethrurpg.com/product/422929/Mythic-Game-Master-Emulator-Second-Edition"
                                    target="_blank"
                                    rel="noopener"
                                    class="btn btn--shadow-primary"
                                >
                                    <i
                                        class="fa-slab fa-regular fa-book"
                                        aria-hidden="true"></i>
                                    Comprar no DriveThruRPG
                                </a>
                            </div>
                            <div class="book-card">
                                <h3>Adventure Crafter</h3>
                                <p>
                                    Sistema de geração de aventuras para
                                    histórias dinâmicas.
                                </p>
                                <a
                                    href="https://www.drivethrurpg.com/product/261479/The-Adventure-Crafter"
                                    target="_blank"
                                    rel="noopener"
                                    class="btn btn--shadow-accent"
                                >
                                    <i
                                        class="fa-slab fa-regular fa-book"
                                        aria-hidden="true"></i>
                                    Comprar no DriveThruRPG
                                </a>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Additional Info Section -->
                <section class="app-info-section">
                    <div class="container">
                        <div class="info-grid">
                            <div class="info-card">
                                <h3>
                                    <i
                                        class="fa-slab fa-regular fa-shield"
                                        aria-hidden="true"></i>
                                    Privacidade e Permissões
                                </h3>
                                <p>
                                    Ambos os apps respeitam sua privacidade com
                                    coleta mínima de dados. Leia nossa <a
                                        href="/pt/privacy"
                                        >Política de Privacidade</a
                                    > completa para detalhes.
                                </p>
                            </div>

                            <div class="info-card">
                                <h3>
                                    <i
                                        class="fa-slab fa-regular fa-clock"
                                        aria-hidden="true"></i>
                                    Atualizações e Roteiro
                                </h3>
                                <p>
                                    Atualizações regulares com novos recursos e
                                    melhorias. Confira o <a href="/blog">Blog</a
                                    > para notas de lançamento e <a
                                        href="http://feedback.jasonholtdigital.com/board"
                                        target="_blank"
                                        rel="noopener">Pedidos de Recursos</a
                                    > para ver o que está planejado.
                                </p>
                            </div>

                            <div class="info-card">
                                <h3>
                                    <i
                                        class="fa-slab fa-regular fa-circle-question"
                                        aria-hidden="true"></i>
                                    Suporte e Comunidade
                                </h3>
                                <p>
                                    Obtenha ajuda através da nossa <a
                                        href="/pt/support">página de Suporte</a
                                    > ou junte-se à comunidade no <a
                                        href="https://discord.gg/PEDHrhzcnk"
                                        target="_blank"
                                        rel="noopener">Discord</a
                                    >.
                                </p>
                            </div>
                        </div>

                        <div class="last-updated">
                            <small
                                >Última atualização: 15 de Setembro de 2025</small
                            >
                        </div>
                    </div>
                </section>
            </main>

            <Footer />
        </div>
    </body>
</html>
