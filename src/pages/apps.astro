---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import PageHeader from '../components/PageHeader.astro';
import AppSection from '../components/AppSection.astro';

// App data
const mobileApp = {
  title: "Mythic GME Mobile",
  whoItsFor: "Solo role‑players who want less lookup and more story, anywhere.",
  features: [
    "Quick Fate checks & Meaning prompts",
    "Smooth notes, scenes, threads, logs", 
    "Custom tables & dice formulas",
    "iOS, Android, Amazon Fire"
  ],
  officialContent: "Licensed Mythic GME 2e content (Fate Chart/Check, Meaning tables).",
  storeLinks: [
    {
      name: "Apple App Store",
      url: "https://apps.apple.com/us/app/mythic-gme-mobile/id6726999147",
      icon: "fa-brands fa-apple"
    },
    {
      name: "Google Play",
      url: "https://play.google.com/store/apps/details?id=com.jasonholtdigital.mythicgme2e",
      icon: "fa-brands fa-google-play"
    },
    {
      name: "Amazon Appstore",
      url: "https://www.amazon.ca/Jason-Holt-Digital-LLC-Mythic/dp/B0DJBPF9L9",
      icon: "fa-brands fa-amazon"
    }
  ]
};

const desktopApp = {
  title: "Mythic GME Digital",
  whoItsFor: "PC/Mac/Linux players who want a focused, extended‑session layout.",
  features: [
    "Full desktop layout for long sessions",
    "Everything included (no in‑app unlocks)",
    "Import/export adventures and tables",
    "Windows, macOS, Linux"
  ],
  officialContent: "Licensed Mythic GME 2e content included.",
  storeLinks: [
    {
      name: "itch.io (DRM‑free)",
      url: "https://jasonholtdigital.itch.io/mythic-gme-digital",
      icon: "fa-brands fa-itch-io"
    },
    {
      name: "Microsoft Store",
      url: "https://apps.microsoft.com/detail/9n39b8hj3cdg",
      icon: "fa-brands fa-windows"
    },
    {
      name: "Steam",
      url: "#",
      icon: "fa-brands fa-steam",
      available: false
    }
  ]
};
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Apps — Mythic GME 2e Companions | Jason Holt Digital</title>
    <meta name="description" content="Compare Mobile and Desktop apps, see official content, and download on your platform. Licensed Mythic GME 2e companion apps." />
    
    <!-- OpenGraph -->
    <meta property="og:title" content="Mythic GME 2e Apps — Mobile & Desktop | Jason Holt Digital" />
    <meta property="og:description" content="Official licensed companion apps for Mythic GME 2e. Available on mobile (iOS, Android) and desktop (Windows, macOS, Linux)." />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://jasonholtdigital.com/apps/" />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Mythic GME 2e Apps — Mobile & Desktop" />
    <meta name="twitter:description" content="Official licensed companion apps for Mythic GME 2e. Available on mobile and desktop platforms." />
    
    <link rel="stylesheet" href="/global.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.0/css/all.min.css" />
    <link rel="canonical" href="https://jasonholtdigital.com/apps/" />
  </head>
  <body>
    <a class="skip" href="#main">Skip to main content</a>
    <div id="bg-atmo" aria-hidden="true"></div>
    <div id="site">
      <Header />
      
      <PageHeader 
        title="Mythic GME 2e Companions"
        subtitle="Pick the right app fast, then download"
        description="Official licensed apps for mobile and desktop. Benefits first; details in Resources."
        accent="Apps"
      />
      
      <main id="main">
        <!-- Mobile App Section (Left-aligned content) -->
        <AppSection 
          title={mobileApp.title}
          whoItsFor={mobileApp.whoItsFor}
          features={mobileApp.features}
          officialContent={mobileApp.officialContent}
          storeLinks={mobileApp.storeLinks}
          reverse={false}
        />
        
        <!-- Desktop App Section (Right-aligned content) -->
        <AppSection 
          title={desktopApp.title}
          whoItsFor={desktopApp.whoItsFor}
          features={desktopApp.features}
          officialContent={desktopApp.officialContent}
          storeLinks={desktopApp.storeLinks}
          reverse={true}
        />
        
        <!-- Additional Info Section -->
        <section class="app-info-section">
          <div class="container">
            <div class="info-grid">
              <div class="info-card">
                <h3>
                  <i class="fa-solid fa-shield-check" aria-hidden="true"></i>
                  Privacy & Permissions
                </h3>
                <p>Both apps respect your privacy with minimal data collection. Read our complete <a href="/privacy">Privacy Policy</a> for details.</p>
              </div>
              
              <div class="info-card">
                <h3>
                  <i class="fa-solid fa-clock-rotate-left" aria-hidden="true"></i>
                  Updates & Roadmap
                </h3>
                <p>Regular updates with new features and improvements. Check the <a href="/blog">Blog</a> for release notes and roadmap.</p>
              </div>
              
              <div class="info-card">
                <h3>
                  <i class="fa-solid fa-life-ring" aria-hidden="true"></i>
                  Support & Community
                </h3>
                <p>Get help through our <a href="/support">Support page</a> or join the community on <a href="https://discord.gg/PEDHrhzcnk" target="_blank" rel="noopener">Discord</a>.</p>
              </div>
              
              <div class="info-card">
                <h3>
                  <i class="fa-solid fa-user" aria-hidden="true"></i>
                  Meet the Developer
                </h3>
                <p>Learn about Jason's background, the partnership with Word Mill Creative, and the story behind these apps. <a href="/about">Read more →</a></p>
              </div>
            </div>
            
            <div class="last-updated">
              <small>Last updated: September 2, 2025</small>
            </div>
          </div>
        </section>
      </main>
      
      <Footer />
    </div>
    
    <style>
      .app-info-section {
        padding: 4rem 0;
        background: var(--color-surface-2);
        border-top: var(--border-base);
      }
      
      .info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        margin-bottom: 2rem;
      }
      
      .info-card {
        background: var(--color-surface);
        border: var(--border-base);
        padding: 2rem;
        transition: transform 0.15s var(--easing-standard);
      }
      
      .info-card:hover {
        transform: translate(-2px, -2px);
      }
      
      .info-card h3 {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--color-text);
        margin: 0 0 1rem;
      }
      
      .info-card h3 i {
        color: var(--color-primary);
        font-size: 1.125rem;
      }
      
      .info-card p {
        color: var(--color-text-muted);
        line-height: 1.6;
        margin: 0;
      }
      
      .info-card a {
        color: var(--color-primary);
        text-decoration: underline;
      }
      
      .info-card a:hover {
        text-decoration: none;
      }
      
      .last-updated {
        text-align: center;
        color: var(--color-text-muted);
        border-top: var(--border-subtle);
        padding-top: 2rem;
      }
      
      @media (max-width: 768px) {
        .app-info-section {
          padding: 3rem 0;
        }
        
        .info-grid {
          grid-template-columns: 1fr;
          gap: 1.5rem;
        }
        
        .info-card {
          padding: 1.5rem;
        }
      }
    </style>
  </body>
</html>